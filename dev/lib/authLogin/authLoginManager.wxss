/* 蒙层 */

.login-cover {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
  display: flex;
  z-index: 10;
}

.login-cover .t_w {
  position: relative;
  top: 224rpx;
  margin-left: auto;
  margin-right: auto;
}

.login-cover .tanchu_view {
  width: 482rpx;
  height: 464rpx;
  overflow: hidden;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 4rpx;
}

.tanchu_view .tc_title {
  display: flex;
  flex-direction: row;
  justify-content: center;
  top: 40rpx;
  position: relative;
}

.tc_title text {
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(55, 55, 55, 1);
  line-height: 20px;
}

.tanchu_view .tc_subtitle {
  position: relative;
