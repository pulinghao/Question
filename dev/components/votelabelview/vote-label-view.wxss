.vote-label-view {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.lable-left {
    display: flex;
    flex-direction: row;
}

.icon-container {
    display: flex;
    flex-direction: row;
}

.label-icon {
    width: 26rpx;
    height: 26rpx;
    margin-top: auto;
    margin-bottom: auto;
}

.label-num {
    margin-left: 8rpx;
    font-size: 24rpx;
    color: #9f9f9f;
    margin-top: auto;
    margin-bottom: auto;
}

.comment-num-container {
    margin-left: 32rpx;
}

.share-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-self: flex-end;
}

.weixin-icon {
    width: 36rpx;
    height: 30rpx;
}

.weixin-share-btn-text {
    font-size: 26rpx;
    color: #20C752;
    margin-left: 4rpx;
}

.share-btn {
    background: none;
    padding: 0;
}

.share-btn::after{
    border: none; 
}