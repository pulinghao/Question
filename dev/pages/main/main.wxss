.body {
  width: 100%;
  height: 1334rpx;
  background: rgba(230, 233, 240, 1);
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  position: fixed;
  left: 0;
  top: 0;
}

.item-layout {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 22rpx 30rpx 16rpx 24rpx;
  margin-top: 30rpx;
  margin-left: 26rpx;
  margin-right: 24rpx;
}

.item-layout .title {
  font-size: 32rpx;
  color: #000;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

.item-layout .answer {
  font-size: 28rpx;
  margin-top: 12rpx;
  color: #9f9f9f;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

.item-layout .bottom-layout {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 18rpx;
}

.item-layout .bottom-layout .time {
  font-size: 24rpx;
  color: #9f9f9f;
}

.item-layout .bottom-layout .answer-layout {
  display: flex;
  flex-direction: row;
}

.item-layout .bottom-layout .answer-layout .icon {
  width: 26rpx;
  height: 26rpx;
  margin-top: auto;
  margin-bottom: auto;
}

.item-layout .bottom-layout .answer-layout .number {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #9f9f9f;
  margin-top: auto;
  margin-bottom: auto;
}

.item-image
{
  width: 652rpx;
  height: 240rpx;
}

.no-more-layout {
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.no-more-layout .icon {
  margin-top: auto;
  margin-bottom: auto;
  width: 44rpx;
  height: 28rpx;
}

.no-more-layout .text {
  font-size: 32rpx;
  color: #9f9f9f;
  margin-left: 8rpx;
}

.button-userinfo-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: transparent;
  z-index: 1;
}

/* 蒙层 */

.zhezao {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
}

.t_w {
  position: relative;
}

.tanchu_view {
  width: 482rpx;
  margin: 25% auto;
  overflow: hidden;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 4rpx;
}

.tanchu_view .title {
  margin: 30rpx auto 30rpx auto;
  color: rgba(65, 65, 65, 1);
  font-size: 35rpx;
  padding: 0rpx 30rpx;
  text-align: center;
}

.tanchu_view .first-line {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-top: 13rpx;
}

.tanchu_view .first-line .toast-img {
  width: 240rpx;
  height: 240rpx;
}

.tanchu_view .second-line {
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 70rpx;
}

.tanchu_view  .toast-title {
  font-size: 18px;
  font-weight: 500;
  color: rgba(55, 55, 55, 1);
}

.tanchu_view .third-line {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.tanchu_view .toast-subtitle {
  font-size: 16px;
  font-weight: 400;
  color: rgba(157, 157, 157, 1);
}

.tanchu_view .forth-line {
  height: 100rpx;
}

.result .title {
  margin-left: 30rpx;
}

.result .title .saiguo {
  font-size: 16px;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(65, 65, 65, 1);
  line-height: 12px;
}

.result .color-bar {
  display: flex;
  flex-direction: row;
  height: 34rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-top: 10rpx;
}

.result .color-bar .bg-bar {
  position: absolute;
  background: #ebebeb; /*#ebebeb;*/
  width: 428rpx;
  height: 24rpx;
  border-top-left-radius: 17rpx;
  border-bottom-left-radius: 17rpx;
  border-top-right-radius: 17rpx;
  border-bottom-right-radius: 17rpx;
  display: flex;
  flex-direction: row;
  z-index: 0;
}

.result .color-bar .bg-bar .left-part {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.result .color-bar .bg-bar .right-part {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.result .vs-icon
{
  position: absolute;
  left: 180rpx;
  top: -12rpx;
  width: 48rpx;
  height: 48rpx;
  z-index: 2;
}
.result .color-bar .left-color-bar {
  background: rgba(255, 0, 60, 1);
  height: 24rpx;
  border-top-left-radius: 17rpx;
  border-bottom-left-radius: 17rpx;
  z-index: 1;
}

.result .color-bar .right-color-bar {
  background: rgba(0, 118, 255, 1);
  height: 24rpx;
  border-top-right-radius: 17rpx;
  border-bottom-right-radius: 17rpx;
  z-index: 1;
}

.result .rate-text {
  display: flex;
  flex-direction: row;
  height: 36rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-top: 10rpx;
}

.result .rate-text .left-rate-text {
  width: 50%;
  font-size: 10px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 146, 255, 1);
  line-height: 18px;
}

.result .rate-text .right-rate-text {
  width: 50%;
  font-size: 10px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 51, 99, 1);
  line-height: 8px;
  text-align: right;
}

.tanchu_view .fifth-line {
  height: 70rpx;
  display: flex;
  flex-direction: row;
}

.tanchu_view .fifth-line .button-left-part {
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: none;
  padding: 0;
}
.tanchu_view .fifth-line .button-left-part::after{
    border: none; 
}

.tanchu_view .fifth-line .button-left-part .weixin-icon {
  left: 30rpx;
  width: 28rpx;
  height: 24rpx;
  position: relative;
}

.tanchu_view .fifth-line .button-left-part .weixin-text {
  position: relative;
  left: 45rpx;
  width: 77px;
  height: 16px;
  font-size: 11px;
  font-family: PingFangTC-Regular;
  font-weight: 400;
  color: rgba(32, 199, 82, 1);
  line-height: 16px;
}

.tanchu_view .fifth-line .button-right-part {
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.tanchu_view .fifth-line .button-right-part .answer-icon {
  width: 26rpx;
  height: 26rpx;
  left: 30rpx;
  position: relative;
}

.tanchu_view .fifth-line .button-right-part .kanfa-text {
  position: relative;
  left: 45rpx;
  width: 80px;
  height: 16px;
  font-size: 11px;
  font-family: PingFangTC-Regular;
  font-weight: 400;
  color: rgba(0, 118, 255, 1);
}

.vote-label-view {
  margin-top: 18rpx;
}

.label-divider-line {
  height: 3rpx;
  background-color: #EEEEEE;
  margin-top: 24rpx;
  margin-bottom: 14rpx;
  margin-left: -25rpx;
  margin-right: -25rpx;
}

.topic-card-item-container {
  background-color: #fff;
  border-radius: 8rpx;
  margin-top: 30rpx;
  margin-left: 26rpx;
  margin-right: 24rpx;
}

.float-view
{
  position: fixed;
  bottom: 120rpx;
  right: 8rpx;
  width: 132rpx;
  height: 132rpx;
  z-index: 10;
}

.float-view .icon-circle
{
  width: 132rpx;
  height: 132rpx;
}

.float-view .float-title
{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 132rpx;
  height: 132rpx;
  text-align: center;
  margin: auto;
  color:rgba(255,255,255,1);
  font-size:16px;
  line-height: 132rpx;
}
