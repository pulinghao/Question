.body {
  width: 100%;
  height: 1334rpx;
  background: #e6e9f0;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.item-layout {
  background-color: transparent;
  border-radius: 8rpx;
  padding: 24rpx 45rpx 0rpx 45rpx;
}

.item-layout .title {
  font-size: 32rpx;
  color: #000;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

.item-layout .answer {
  font-size: 28rpx;
  margin-top: 12rpx;
  color: #9f9f9f;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 9;
  -webkit-box-orient: vertical;
  align-content: center;
}

.no-more-layout {
  margin-top: 62rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.no-more-layout .icon {
  margin-top: auto;
  margin-bottom: auto;
  width: 44rpx;
  height: 28rpx;
}

.no-more-layout .text {
  font-size: 32rpx;
  color: #9f9f9f;
  margin-left: 8rpx;
}